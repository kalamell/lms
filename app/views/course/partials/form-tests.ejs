<!-- Pre-test Settings -->
<div class="card mb-4">
  <div class="card-header">
    <h5 class="card-title mb-0"><i class="icon-base ri ri-survey-line me-2"></i>Pre-test</h5>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-4 mb-4">
        <label class="form-label">เปิดใช้ Pre-test</label>
        <select class="form-select" name="pretest">
          <option value="0" <%= course?.pretest != 1 ? 'selected' : '' %>>ปิด</option>
          <option value="1" <%= course?.pretest == 1 ? 'selected' : '' %>>เปิด</option>
        </select>
      </div>
      <div class="col-md-8 mb-4">
        <label class="form-label">เลือกแบบทดสอบ Pre-test</label>
        <select class="form-select" name="pre_testing">
          <option value="0">- - - เลือกแบบทดสอบ - - -</option>
        </select>
      </div>
    </div>
    <div class="mb-0">
      <label class="form-label">คำอธิบาย Pre-test</label>
      <div id="pretest_description-editor" class="quill-editor"><%- course?.pretest_description || '' %></div>
      <input type="hidden" id="pretest_description" name="pretest_description">
    </div>
  </div>
</div>

