<div class="container-xxl flex-grow-1 container-p-y">
  <!-- Header -->
  <div class="d-flex align-items-center mb-6">
    <a href="/settings/format" class="btn btn-icon btn-text-secondary rounded-pill me-3">
      <i class="icon-base ri ri-arrow-left-line"></i>
    </a>
    <div>
      <h4 class="mb-1"><%= action === 'create' ? 'Create' : 'Edit' %> Format</h4>
      <p class="text-muted mb-0">
        <% if (action === 'create') { %>
        Add new store format
        <% } else { %>
        Edit format: <%= format.name %>
        <% } %>
      </p>
    </div>
  </div>

  <% if (typeof error !== 'undefined' && error) { %>
  <div class="alert alert-danger alert-dismissible mb-4" role="alert">
    <%= error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
  <% } %>

  <!-- Form -->
  <div class="row">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <form method="POST" action="/settings/format<%= action === 'edit' ? '/' + format.id + '/edit' : '/create' %>">
            <div class="mb-4">
              <label class="form-label" for="name">Format Name <span class="text-danger">*</span></label>
              <input type="text" class="form-control" id="name" name="name"
                     value="<%= format ? format.name : '' %>" required placeholder="Enter format name">
            </div>

            <div class="mb-4">
              <label class="form-label" for="order">Display Order</label>
              <input type="number" class="form-control" id="order" name="order"
                     value="<%= format ? format.order : 999 %>" min="0" placeholder="999">
              <div class="form-text">Lower number = higher priority</div>
            </div>

            <div class="mb-4">
              <label class="form-label d-block">Status</label>
              <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="status" name="status"
                       <%= (!format || format.status === 1) ? 'checked' : '' %>>
                <label class="form-check-label" for="status">Active</label>
              </div>
            </div>

            <div class="d-flex gap-2">
              <button type="submit" class="btn btn-primary">
                <i class="icon-base ri ri-save-line me-2"></i>
                <%= action === 'create' ? 'Create' : 'Save Changes' %>
              </button>
              <a href="/settings/format" class="btn btn-secondary">Cancel</a>
            </div>
          </form>
        </div>
      </div>
    </div>

    <% if (action === 'edit' && format) { %>
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h6 class="mb-3">Information</h6>
          <div class="mb-2">
            <small class="text-muted">ID</small>
            <p class="mb-0"><%= format.id %></p>
          </div>
          <div class="mb-2">
            <small class="text-muted">Created</small>
            <p class="mb-0">
              <% if (format.created_at) { %>
              <%= new Date(format.created_at).toLocaleString('th-TH') %>
              <% } else { %>
              -
              <% } %>
            </p>
          </div>
          <div class="mb-0">
            <small class="text-muted">Updated</small>
            <p class="mb-0">
              <% if (format.updated_at) { %>
              <%= new Date(format.updated_at).toLocaleString('th-TH') %>
              <% } else { %>
              -
              <% } %>
            </p>
          </div>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>
