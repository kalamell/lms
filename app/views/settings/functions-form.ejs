<div class="container-xxl flex-grow-1 container-p-y">
  <!-- Header -->
  <div class="d-flex align-items-center mb-6">
    <a href="/settings/functions" class="btn btn-icon btn-text-secondary rounded-pill me-3">
      <i class="icon-base ri ri-arrow-left-line"></i>
    </a>
    <div>
      <h4 class="mb-1"><%= action === 'create' ? 'Create' : 'Edit' %> Function</h4>
      <p class="text-muted mb-0">
        <% if (action === 'create') { %>
        Add new function/division
        <% } else { %>
        Edit function: <%= func.name %>
        <% } %>
      </p>
    </div>
  </div>

  <% if (typeof error !== 'undefined' && error) { %>
  <div class="alert alert-danger alert-dismissible mb-4" role="alert">
    <%= error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
  <% } %>

  <!-- Form -->
  <div class="row">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <form method="POST" action="/settings/functions<%= action === 'edit' ? '/' + func.id + '/edit' : '/create' %>">
            <div class="mb-4">
              <label class="form-label" for="format_id">Format <span class="text-danger">*</span></label>
              <select class="form-select" id="format_id" name="format_id" required>
                <option value="">Select Format</option>
                <% formats.forEach(f => { %>
                <option value="<%= f.id %>" <%= (func && func.format_id == f.id) ? 'selected' : '' %>>
                  <%= f.name %>
                </option>
                <% }) %>
              </select>
            </div>

            <div class="mb-4">
              <label class="form-label" for="name">Function Name <span class="text-danger">*</span></label>
              <input type="text" class="form-control" id="name" name="name"
                     value="<%= func ? func.name : '' %>" required placeholder="Enter function name">
            </div>

            <div class="mb-4">
              <label class="form-label" for="color">Color</label>
              <div class="input-group">
                <input type="color" class="form-control form-control-color" id="colorPicker"
                       value="<%= func && func.color ? func.color : '#5f61e6' %>">
                <input type="text" class="form-control" id="color" name="color"
                       value="<%= func ? func.color : '' %>" placeholder="#5f61e6">
              </div>
              <div class="form-text">Color for visual identification</div>
            </div>

            <div class="mb-4">
              <label class="form-label" for="order">Display Order</label>
              <input type="number" class="form-control" id="order" name="order"
                     value="<%= func ? func.order : 999 %>" min="0" placeholder="999">
            </div>

            <div class="mb-4">
              <label class="form-label d-block">Status</label>
              <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="status" name="status"
                       <%= (!func || func.status === 1) ? 'checked' : '' %>>
                <label class="form-check-label" for="status">Active</label>
              </div>
            </div>

            <div class="d-flex gap-2">
              <button type="submit" class="btn btn-primary">
                <i class="icon-base ri ri-save-line me-2"></i>
                <%= action === 'create' ? 'Create' : 'Save Changes' %>
              </button>
              <a href="/settings/functions" class="btn btn-secondary">Cancel</a>
            </div>
          </form>
        </div>
      </div>
    </div>

    <% if (action === 'edit' && func) { %>
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h6 class="mb-3">Information</h6>
          <div class="mb-2">
            <small class="text-muted">ID</small>
            <p class="mb-0"><%= func.id %></p>
          </div>
          <div class="mb-2">
            <small class="text-muted">Created</small>
            <p class="mb-0">
              <% if (func.created_at) { %>
              <%= new Date(func.created_at).toLocaleString('th-TH') %>
              <% } else { %>
              -
              <% } %>
            </p>
          </div>
          <div class="mb-0">
            <small class="text-muted">Updated</small>
            <p class="mb-0">
              <% if (func.updated_at) { %>
              <%= new Date(func.updated_at).toLocaleString('th-TH') %>
              <% } else { %>
              -
              <% } %>
            </p>
          </div>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>

<%- contentFor('script') %>
<script>
// Sync color picker with text input
document.getElementById('colorPicker').addEventListener('input', function() {
  document.getElementById('color').value = this.value;
});
document.getElementById('color').addEventListener('input', function() {
  if (/^#[0-9A-Fa-f]{6}$/.test(this.value)) {
    document.getElementById('colorPicker').value = this.value;
  }
});
</script>
